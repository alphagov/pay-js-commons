{
  "name": "@govuk-pay/pay-js-commons",
  "version": "2.2.0",
  "description": "Reusable js scripts for GOV.UK Pay Node.js projects",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "copy": "cp -R src/data lib/data",
    "transpile": "npm run clean && babel src --out-dir lib && npm run copy",
    "prepare": "npm run transpile",
    "test": "karma start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/pay-js-commons.git"
  },
  "keywords": [
    "nodejs",
    "js",
    "xo",
    "GOV.UK",
    "GaaP",
    "Google Analytics",
    "Event Tracking"
  ],
  "author": "Jon Heslop (Government Digital Service)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alphagov/pay-js-commons/issues"
  },
  "homepage": "https://github.com/alphagov/pay-js-commons#readme",
  "xo": {
    "space": true,
    "semicolon": false,
    "envs": [
      "browser",
      "es6"
    ],
    "ignores": [
      "build",
      "lib"
    ],
    "globals": [
      "describe",
      "it"
    ],
    "rules": {
      "object-curly-spacing": [
        2,
        "always"
      ]
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "safari >= 7",
              "ie >= 10"
            ]
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babelify": "^10.0.0",
    "browser-env": "^3.2.5",
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-promise": "^4.0.1",
    "husky": "^1.3.1",
    "jsdom": "^14.0.0",
    "jsdom-global": "^3.0.2",
    "karma": "^4.0.0",
    "karma-browserify": "^6.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-source-map-support": "^1.2.0",
    "lint-staged": "^8.1.0",
    "mocha": "^6.1.3",
    "rfc822-validate": "^1.0.0",
    "sinon": "^7.2.2",
    "uglify-js": "^3.3.18",
    "watchify": "^3.11.0",
    "xo": "^0.24.0"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "moment-timezone": "^0.5.23",
    "slugify": "^1.3.4"
  }
}
